main activity 

package com.example.program3;

import android.content.Intent;
import android.os.Bundle;
import android.text.TextUtils;
import android.util.Patterns;
import android.view.View;
import android.widget.*;
import androidx.appcompat.app.AppCompatActivity;

public class MainActivity extends AppCompatActivity {

    EditText editTextName, editTextEmail, editTextAge, editTextPhone, editTextPassword;
    CheckBox checkBoxPlusTwo, checkBoxDegree, checkBoxPostGraduate;
    RadioGroup radioGroupGender;
    Button buttonSubmit;
    String name,email,ageStr,phone,password,gender,Qualification;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main); // Ensure your XML file is named activity_main.xml

        // Initialize views58
        editTextName = findViewById(R.id.editTextName);
        editTextEmail = findViewById(R.id.editTextEmail);
        editTextAge = findViewById(R.id.editTextAge);
        editTextPhone = findViewById(R.id.editTextPhone);
        editTextPassword = findViewById(R.id.editTextPassword);

        checkBoxPlusTwo = findViewById(R.id.checkBoxPlusTwo);
        checkBoxDegree = findViewById(R.id.checkBoxDegree);
        checkBoxPostGraduate = findViewById(R.id.checkBoxPostGraduate);

        radioGroupGender = findViewById(R.id.radioGroupGender);
        buttonSubmit = findViewById(R.id.buttonSubmit);

        buttonSubmit.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                validateForm();
            }
        });
    }

    private void validateForm() {
         name = editTextName.getText().toString().trim();
         email = editTextEmail.getText().toString().trim();
         ageStr = editTextAge.getText().toString().trim();
         phone = editTextPhone.getText().toString().trim();
        password = editTextPassword.getText().toString();

        // Name validation
        if (TextUtils.isEmpty(name)) {
            editTextName.setError("Name is required");
            return;
        }

        // Email validation
        if (TextUtils.isEmpty(email)) {
            editTextEmail.setError("Email is required");
            return;
        }
        if (!Patterns.EMAIL_ADDRESS.matcher(email).matches()) {
            editTextEmail.setError("Enter a valid email address");
            return;
        }

        // Age validation
        int age;
        try {
            age = Integer.parseInt(ageStr);
            if (age < 0 || age > 120) {
                editTextAge.setError("Enter a valid age");
                return;
            }
        } catch (NumberFormatException e) {
            editTextAge.setError("Age must be a number");
            return;
        }

        // Phone number validation
        if (TextUtils.isEmpty(phone)) {
            editTextPhone.setError("Phone number is required");
            return;
        }
        String phonePattern = "^[6-9]\\d{9}$";
        if (!phone.matches(phonePattern)) {
            editTextPhone.setError("Enter a valid 10-digit Indian phone number");
            return;
        }

        // Password validation
        if (TextUtils.isEmpty(password)) {
            editTextPassword.setError("Password is required");
            return;
        }
        String passwordPattern = "^(?=.*[a-z])(?=.*[A-Z])(?=.*\\d)(?=.*[@#$%^&+=!]).{6,}$";
        if (!password.matches(passwordPattern)) {
            editTextPassword.setError("Password must contain uppercase, lowercase, digit, and special character");
            return;
        }

        // Qualification check
        if (!checkBoxPlusTwo.isChecked() && !checkBoxDegree.isChecked() && !checkBoxPostGraduate.isChecked()) {
            Toast.makeText(this, "Select at least one qualification", Toast.LENGTH_SHORT).show();
            return;
        }

        // Gender check
        int selectedGenderId = radioGroupGender.getCheckedRadioButtonId();
        if (selectedGenderId == -1) {
            Toast.makeText(this, "Select your gender", Toast.LENGTH_SHORT).show();
            return;
        }

        RadioButton selectedGender = findViewById(selectedGenderId);
         gender = selectedGender.getText().toString();

        // Build result string
        StringBuilder result = new StringBuilder();
        result.append(" BIODATA SUBMITTED\n\n");
        result.append("Name: ").append(name).append("\n");
        result.append("Email: ").append(email).append("\n");
        result.append("Age: ").append(ageStr).append("\n");
        result.append("Phone: ").append(phone).append("\n");
        result.append("Password: ").append(password).append("\n");
        result.append("Gender: ").append(gender).append("\n");
        result.append("Qualifications: ");

        if (checkBoxPlusTwo.isChecked()) result.append("Plus Two ");
        Qualification="plustwo";
        if (checkBoxDegree.isChecked()) result.append("Degree ");
        Qualification+="degree";
        if (checkBoxPostGraduate.isChecked()) result.append("Post Graduate");
        Qualification+="pg";

        // Show result
        //Toast.makeText(this, result.toString(), Toast.LENGTH_LONG).show();
        Intent i = new Intent(MainActivity.this, MainActivity2.class);
        //Toast.makeText(this, name, Toast.LENGTH_SHORT).show();
        i.putExtra("name",name);
        i.putExtra("email",email);
        i.putExtra("age",ageStr);
        i.putExtra("phone",phone);
        i.putExtra("password",password);
        i.putExtra("gender",gender);
        i.putExtra("qualification", Qualification);
        startActivity(i);
    }
}


